<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">

    <TextView
        android:id="@+id/tv_contacts"
        style="@style/btn_style_done"
        android:layout_marginTop="100dp"
        android:text="仿魅族手机通讯录" />

    <TextView
        android:id="@+id/tv_swipe_menu"
        style="@style/btn_style_done"
        android:layout_below="@+id/tv_contacts"
        android:layout_marginTop="25dp"
        android:text="仿QQ侧滑菜单、小红点" />

    <TextView
        android:id="@+id/tv_water_fall"
        style="@style/btn_style_done"
        android:layout_below="@+id/tv_swipe_menu"
        android:layout_marginTop="25dp"
        android:text="瀑布流+图片墙 " />

    <TextView
        android:id="@+id/tv_view_pager2"
        style="@style/btn_style_done"
        android:layout_below="@+id/tv_water_fall"
        android:layout_marginTop="25dp"
        android:text="ViewPager2系列" />

    <TextView
        android:id="@+id/tv_touch_helper"
        style="@style/btn_style_done"
        android:layout_below="@+id/tv_swipe_menu"
        android:layout_marginTop="25dp"
        android:text="ItemTouchHelper "
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_refresh"
        style="@style/btn_style_done"
        android:layout_below="@+id/tv_touch_helper"
        android:layout_marginTop="25dp"
        android:text="下拉刷新，上拉加载 "
        android:visibility="gone" />
</RelativeLayout>

