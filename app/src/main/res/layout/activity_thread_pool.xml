<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.ninetripods.mq.study.multiThread.ThreadPoolActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/m_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pool_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="线程池类型：newScheduledThreadPool(4)"
                android:textSize="14sp"
                android:textStyle="bold" />

            <include
                android:id="@+id/progress_bar1"
                layout="@layout/progress_item" />

            <include
                android:id="@+id/progress_bar2"
                layout="@layout/progress_item" />

            <include
                android:id="@+id/progress_bar3"
                layout="@layout/progress_item" />

            <include
                android:id="@+id/progress_bar4"
                layout="@layout/progress_item" />

            <include
                android:id="@+id/progress_bar5"
                layout="@layout/progress_item" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_thread1"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="启动线程一" />

                <TextView
                    android:id="@+id/tv_thread2"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="启动线程二" />

                <TextView
                    android:id="@+id/tv_thread3"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="启动线程三" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_thread4"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="启动线程四" />

                <TextView
                    android:id="@+id/tv_thread5"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="启动线程五" />

                <TextView
                    android:id="@+id/tv_thread_all"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="全部启动" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_stop1"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="停止线程一" />

                <TextView
                    android:id="@+id/tv_stop2"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="停止线程二" />

                <TextView
                    android:id="@+id/tv_stop3"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="停止线程三" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_stop4"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="停止线程四" />

                <TextView
                    android:id="@+id/tv_stop5"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="停止线程五" />

                <TextView
                    android:id="@+id/tv_stop_all"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="停止全部" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shutdown"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="shutdown()" />

                <TextView
                    android:id="@+id/tv_shutdown_now"
                    style="@style/btn_style_done"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="shutdownNow()" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
